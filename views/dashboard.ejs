<!DOCTYPE html>
<html lang="en">

<head>
    <title> Dashboard </title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>

    <div class="container">

        <h1>Dashboard</h1>

    </div>

    <div class="search-container">
        <form action="/search" method="get">
            <input type="text" name="name" placeholder="Search by name">
            <button type="submit" class="search-btn">Search</button>
        </form>
    </div>
    

    <div class="button-container">

        <button>
            <a href="/add">‚ûï Add Student</a>
        </button>

        <button>
            <a href="/logout">üö™ Logout</a>
        </button>
    </div>

    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (Users.length> 0) { %>
                    <% Users.forEach(user => { %> 
                        <tr>
                            <td><%= user._id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone ? user.phone : "N/A" %></td>
                            <td>
                                <a href="/edit/<%= user._id %>" class="edit-btn">‚úè Edit</a>
                            </td>
                            <td>
                                <a href="/delete/<%= user._id %>" class="action-btn">‚ùå Delete</a>
                            </td>
                        </tr>
                        <% }) %>         
                        <% } else { %>
                            <tr>
                                <td colspan="5">No Employees found.</td>
                            </tr>
                        <% } %>
                        
            </tbody>
        </table>
    </div>
    
</body>

</html>
